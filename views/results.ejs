<!DOCTYPE html>
<html>
	<%- include('partials/header.ejs') %>
	 
   <body>
		<main>
			<h1> Results </h1>
			<form action="/search">
				<input type="text" placeholder="Type keyword" name="keyword" />
				<br><br>
				<button>Search</button><br>
				<a id="favLink" href="/getKeywords">See Favorites</a>
			</form>
			<hr>
			<div id="resultsContainer">
				<% imageUrlArray.forEach((image, i) => { %>
					<%- (i % 3 == 0) ? '<br>' : '' %>
						<img class="image" src='<%= image %>' width='200' height='200' />
						<img class="favoriteIcon" src='img/favorite.png' width='20'>
				<% }); %>
			</div>
		</main>
		<%- include('partials/footer.ejs') %>
    </body>
</html>